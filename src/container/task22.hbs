{{!
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<div>
  <header>
    {{#with page_header}}
      <div class="text-center"><h1>{{title}}</h1></div>
      <br>
      <div class="text-center text-uppercase">
        <p>{{description}}</p>
      </div>
    {{/with}}
  </header>
  <br>
  <main>
    {{#with section}}
      <div class="card">
          <div class="card-body">
              <div class="display-6 text-end">{{about_us.title_list.main}}</div>
              <br>
              <div class="text-end">
                <h2>{{about_us.title_list.sub}}</h2>
              </div>
              <br>
              <div>
                <button class="btn btn-outline-info">{{about_us.button.text}}</button>
              </div>
          </div>
      </div>
      <br>
      <div class="card">
          <div class="card-body">
            {{#with advantage}}
              <div class="display-5">{{title}}</div>
              <br>
              <div class="card">
                <div class="card-body">
                  <div class="display-4">{{efficiency.title}}</div>
                  <br>
                  <div>
                    <h6>{{efficiency.sub_title}}</h6>
                  </div>
                  <br>
                  <div>
                    <p>{{efficiency.description}}</p>
                  </div>
                  <br>
                  <div>
                    <button class="btn btn-outline-warning">{{efficiency.button}}</button>
                  </div>
                </div>
              </div>
              <br>
              <div class="card">
                <div class="card-body">
                  <div class="display-4 text-center">{{innovation.title}}</div>
                  <br>
                  <div class="text-center">
                    <h6>{{innovation.sub_title}}</h6>
                  </div>
                  <br>
                  <div class="text-center">
                    <p>{{innovation.description}}</p>
                  </div>
                  <br>
                  <div>
                    <button class="btn btn-outline-warning">{{innovation.button}}</button>
                  </div>
                </div>
              </div>
              <br>
              <div class="card">
                <div class="card-body">
                  <div class="display-4 text-end">{{collaboration.title}}</div>
                  <br>
                  <div class="text-end">
                    <h6>{{collaboration.sub_title}}</h6>
                  </div>
                  <br>
                  <div class="text-end">
                    <p>{{collaboration.description}}</p>
                  </div>
                  <br>
                  <div>
                    <button class="btn btn-outline-warning">{{collaboration.button}}</button>
                  </div>
                </div>
              </div>
            {{/with}}
          </div>
      </div>
      <br>
      <div class="card">
        <div class="card-body">
          {{#with agreement}}
            <div class="display-5">{{title}}</div>
            <br>
            <div class="card">
              <div class="card-body">
                {{#with info}}
                  <div><h5>{{sub_title}}</h5></div>
                  <br>
                  <div class="card">
                    <div class="card-body">
                      {{#with detail}}
                        <div><p>{{text}}</p></div>
                        <br>
                        <div>
                          <button class="btn btn-success">{{button}}</button>
                        </div>
                      {{/with}}
                    </div>
                  </div>
                {{/with}}
              </div>
            </div>
          {{/with}}
        </div>
    </div>
    {{/with}}
  </main>

