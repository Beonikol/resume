{{!
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<main>
    <hr>
    <section>
        <div class="mb-4">
            <h1>{{header}}</h1>
        </div>
    </section>
    <section>
        <div class="row">
            {{#with purchase}}
            <div class="col-12">
                <div class="nav nav-tabs">
                    {{#each tabs}}
                    <div class="nav-link {{#if @first}} active {{/if}} mb-4">
                        {{this}}</div>
                    {{/each}}
                </div>
                <div class="row">
                    {{#with actionBlock}}
                    <div class="col-4 mt-3">
                        {{#with input}}
                        <label class="form-label ps-1"></label>
                        <input class="form-control" value="{{placeholder}}">
                        {{/with}}
                    </div>
                    <div class="col-6 mt-4">
                        {{#each buttons}}
                        <a href="{{link}}"
                            class="{{#if isSuccess}}btn btn-success{{/if}} {{#if isOutline}}btn btn-outline-success{{/if}} {{#if isDanger}}btn btn-danger{{/if}} m-1">{{text}}</a>
                        {{/each}}
                    </div>
                    {{/with}}
                </div>
                <hr>
                {{#each itemList}}
                {{>purchaseItem}}
                {{/each}}
            </div>
            {{/with}}
        </div>
    </section>
    <hr>
    <section>
        {{#with userInfo}}
        <div class="row">
            <div class="col-12">
                <div class="my-5">
                    <h2>{{title}}</h2>
                </div>
                <div class="card">
                    <div class="card-body">
                        {{#with profileData}}
                        <div>
                            <h4>{{title}}</h4>
                        </div>
                        <div class="card mb-2">
                            <div class="card-body">
                                <div class="row">
                                    {{#with fullName}}
                                    <div class="col-4 mt-1">
                                        {{#with surname}}
                                        <div class="mb-1">{{title}}</div>
                                        <div><b>{{value}}</b></div>
                                        {{/with}}
                                    </div>
                                    <div class="col-4 mt-1">
                                        {{#with name}}
                                        <div class="mb-1">{{title}}</div>
                                        <div><b>{{value}}</b></div>
                                        {{/with}}
                                    </div>
                                    <div class="col-4 mt-1">
                                        {{#with middleName}}
                                        <div class="mb-1">{{title}}</div>
                                        <div><b>{{value}}</b></div>
                                        {{/with}}
                                    </div>
                                    {{/with}}
                                </div>
                            </div>
                        </div>
                        <div class="card mb-2">
                            <div class="card-body">
                                <div class="row">
                                    {{#with otherInfo}}
                                    <div class="col-4 mt-1">
                                        {{#with birthday}}
                                        <div class="mb-1">{{title}}</div>
                                        <div><b>{{value}}</b></div>
                                        {{/with}}
                                    </div>
                                    <div class="col-4 mt-1">
                                        {{#with sex}}
                                        <div class="mb-1">{{title}}</div>
                                        <div><b>{{value}}</b></div>
                                        {{/with}}
                                    </div>
                                    <div class="col-4 mt-1">
                                        {{#with language}}
                                        <div class="mb-1">{{title}}</div>
                                        <div><b>{{value}}</b></div>
                                        {{/with}}
                                    </div>
                                    {{/with}}
                                </div>
                            </div>
                        </div>
                        {{/with}}
                        <div class="card">
                            <div class="card-body">
                                <div class="row">
                                    {{#each buttons}}
                                    <div class="col-4 mt-1">
                                        <a href="{{link}}"
                                            class="{{#if isPrimary}}btn btn-primary{{/if}} {{#if isSecondary}}btn btn-outline-secondary{{/if}} {{#if isDanger}}btn btn-outline-danger{{/if}}">{{text}}</a>
                                    </div>
                                    {{/each}}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card mt-2">
                    <div class="card-body">
                        <div class="row">
                            {{#with recipients}}
                            <div>
                                <h6>{{title}}</h6>
                            </div>
                            {{#each users}}
                            <div class="col-4">
                                <div class="card mt-2">
                                    <div class="card-body">
                                        <div class="my-1"><b>{{name}}</b></div>
                                        <div class="my-1">
                                            <a href="tel:{{phone}}">{{phone}}</a>
                                        </div>
                                        {{#with button}}
                                            <div class="mt-3">
                                                <a href="{{link}}" class="btn btn-primary">{{text}}</a>
                                            </div>
                                        {{/with}}
                                    </div>
                                </div>
                            </div>
                            {{/each}}
                            {{/with}}
                        </div>
                    </div>
                </div>
                <div class="card mt-2">
                    <div class="card-body">
                        <div class="row">
                            {{#with contacts}}
                            <div>
                                <h6>{{title}}</h6>
                            </div>
                            {{#each contactData}}
                            <div class="col-4">
                                <div class="card mt-2">
                                    <div class="card-body">
                                        <div class="my-1"><b>{{title}}</b></div>
                                        <div class="my-1">
                                            <a href="tel:{{value}}">{{value}}</a>
                                        </div>
                                        {{#with button}}
                                        <div class="mt-3">
                                            <a href="{{link}}" class="{{#if isPrimary}}btn btn-primary{{/if}} {{#if isSecondary}}btn btn-outline-secondary{{/if}} {{#if isDanger}}btn btn-outline-danger{{/if}}">{{text}}</a>
                                        </div>
                                        {{/with}}
                                    </div>
                                </div>
                            </div>
                            {{/each}}
                            {{/with}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{/with}}
    </section>
    <hr>
</main>


