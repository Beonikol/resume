{{!
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<div>
    {{#with main}}
    <main>
        <section class="mb-5">
            {{> title data="All skills" big=true}}
            <ul>
                <div class="row">
                    {{#each skills}}
                    <div class="col-4">
                        <li class="my-1">
                            {{name}}
                            {{#if point includeZero=true}} ({{point}}) {{/if}}
                            {{#if isTop}} (top) {{/if}}
                            {{#unless point includeZero=true}} (не вивчаемо) {{/unless}}
                            {{#unless point}}
                            {{#if point includeZero=true}}
                            (зараз вивчаємо)
                            {{/if}}
                            {{/unless}}
                        </li>
                    </div>
                    {{/each}}
                </div>
            </ul>
        </section>
        <hr class="my-3">
        <section>
            {{> title data="My hobbies" big=false}}
            <ul>
                <div class="row">
                    {{#each hobbies}}
                    <div class="col-4">
                        <li class="my-1">
                            {{name}}
                            {{#if isMain}} (favourite) {{/if}}
                        </li>
                    </div>
                    {{/each}}
                </div>
            </ul>
        </section>
    </main>
    {{/with}}
</div>

