{{!
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}
<main>
    <hr>
    <section>
        {{#with formBlock}}
        <div class="row">
            <div class="col-12">
                <div class="row">
                    <div class="col-8 mt-4">
                        <div>
                            <h1>{{header}}</h1>
                        </div>
                        {{#with rating}}
                        <div class="mt-3 mb-4">
                            <em>{{title}}</em> <span>{{value}}</span>
                        </div>
                        {{/with}}
                        {{#with actionBlock}}
                        <div class="nav nav-tabs">
                            {{#each tabs}}
                            <div class="nav-link {{#if @last}}active{{/if}} px-5">
                                {{text}}
                            </div>
                            {{/each}}
                        </div>
                        <hr class="mt-5">
                        <div class="card mt-4">
                            <div class="body">
                                {{#with report}}
                                <div class="ms-3 mt-3">{{title}}</div>
                                {{#with button}}
                                <div class="ms-3 mt-2 mb-3">
                                    <a href="{{link}}" class="btn btn-secondary btn-sm">{{text}}</a>
                                </div>
                                {{/with}}
                                {{/with}}
                            </div>
                        </div>
                        <hr class="my-5">
                        {{/with}}
                        {{#with feedbackBlock}}
                        <div>
                            <div>
                                <h3>{{title}}</h3>
                            </div>
                            <div class="mt-4">
                                {{#each buttons}}
                                <a href="{{link}}"
                                    class="{{#if isWarning}}btn btn-warning{{/if}} {{#if isSuccess}}btn btn-success ms-4{{/if}} {{#if isDanger}}btn btn-danger ms-4{{/if}}">{{text}}</a>
                                {{/each}}
                            </div>
                        </div>
                        {{/with}}
                    </div>
                    <div class="col-4">
                        {{#with goodsInfo}}
                        <div class="card">
                            <img src="{{photo}}" alt="photo" class="card-img-top ps-4 pt-4 pb-3 pe-5">
                            <div class="card-body">
                                {{name}}
                            </div>
                        </div>
                        <div class="card mt-2">
                            <div class="card-body">
                                <div class="mb-0"><b>{{price}}</b></div>
                            </div>
                            <div class="my-1 ms-3 mb-2">
                                {{#if inMarket}}
                                <em>Є в наявності</em>
                                {{/if}}
                            </div>
                            <div>
                                {{#each buttons}}
                                <div clas="">
                                    <a href="{{link}}"
                                        class="{{#if isPrimary}}btn btn-primary{{/if}} {{#if isSecondary}}btn btn-secondary{{/if}} my-1 ms-2 mb-3">{{text}}</a>
                                </div>
                                {{/each}}
                            </div>

                        </div>
                        <div class="card mt-3">
                            <div class="card-body">
                                {{#with seller}}
                                <div>
                                    {{title}}: <b>{{value}}</b>
                                </div>
                                {{/with}}
                            </div>
                        </div>
                        {{/with}}
                    </div>
                </div>
            </div>
        </div>
        {{/with}}
    </section>
    <hr class="my-3">
    <section>
        {{#each reviewList}}
        {{>reviewItem}}
        {{/each}}
    </section>
    <section class="mt-3">
        {{#with service}}
        <div class="card">
            <div class="card-body text-center text-bg-success">
                <div>
                    <h5>{{title}}</h5>
                </div>
                <div>
                    <p>{{description}}</p>
                </div>
                <div>
                    {{#each buttons}}
                    <a href="{{link}}" class="btn btn-primary">{{text}}</a>
                    {{/each}}
                </div>
            </div>
        </div>
        {{/with}}
    </section>
    <hr class="mb-3">
</main>

