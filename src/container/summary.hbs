{{!
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<div>
    {{#with main}}
    <main>
        <section class="mb-4">
            <div class="card">
                <div class="card-body">
                    <div>
                        {{> title data=sammary.title big=true}}
                    </div>
                    <div>
                        <p>
                            {{sammary.text}}
                        </p>
                    </div>
                </div>
            </div>
        </section>

        {{#with experience}}
        <section>
            <div class="card">
                <div class="card-body">
                    {{> title data=title big=false}}
                    <div>
                        <p>
                            {{text}}
                        </p>
                    </div>
                </div>
            </div>
        </section>
        {{/with}}
    </main>
    {{/with}}
</div>

