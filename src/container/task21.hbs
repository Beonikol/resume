{{!
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<div>
  <header>
    {{#with heading}}
      <div class="card">
        <div class="card-body">
          <div class="card">
            <div class="card-body">
              <div>
                <h1>{{main.title}}</h1>
              </div>
              <div>
                <p>{{main.text}}</p>
              </div>
              {{#with main}}
                <div>
                  <button class="btn btn-primary">{{button_text.solid}}</button>
                </div>
                <br>
                <div>
                  <button class="btn btn-outline-primary">{{button_text.outline}}</button>
                </div>
              {{/with}}
            </div>
          </div>
          <br>
          <div class="card">
            <div class="card-body">
              <div>
                <h2>{{second.title}}</h2>
              </div>
              <div>
                <p>{{second.text}}</p>
              </div>
              {{#with second}}
                <div>
                  <button class="btn btn-secondary">{{button_text.solid}}</button>
                </div>
                <br>
                <div>
                  <button class="btn btn-outline-secondary">{{button_text.outline}}</button>
                </div>
              {{/with}}
            </div>
          </div>
          <br>
          <div class="card">
            <div class="card-body">
              <div>
                <h3>{{subblock.title}}</h3>
              </div>
              <div>
                <p>{{subblock.text}}</p>
              </div>
              {{#with subblock}}
                <div>
                  <button class="btn btn-dark">{{button_text.solid}}</button>
                </div>
                <br>
                <div>
                  <button class="btn btn-outline-dark">{{button_text.outline}}</button>
                </div>
              {{/with}}
            </div>
          </div>
        </div>
      </div>
    {{/with}}
  </header>
  <main>
    <div class="card">
        <div class="card-body">
          {{#with nested_display}}
            <div class="display-1">{{title}}</div>
              <div class="card">
                <div class="card-body">
                  {{#with children_display}}
                    <div class="display-4">{{title}}</div>
                    <br>
                    <div>
                      <p>{{text}}</p>
                    </div>
                    <br>
                    <div>
                      <button class="btn btn-outline-warning">{{button.text}}</button>
                    </div>
                  {{/with}}
                </div>
              </div> 
              <br>
              <div>
                <h6>{{header_text}}</h6>
              </div>
              <br>
                <div>
                  <button class="btn btn-info">{{button.text}}</button>
                </div>
          {{/with}}
        </div>
    </div>
  </main>
  <footer>
    <div class="card">
        <div class="card-body">
          {{#with paragraph}}
            <div class="text-uppercase"><p>{{title}}</p></div>
            <br>
            <div class="text-lowercase"><p>{{text}}</p></div>
            <br>
            <div>
              <a href="{{button.url}}" class="btn btn-link">{{button.text}}</a>
            </div>
            <br>
            <div class="card">
              <div class="card-body">
                {{#each list_name}}
                  <ul>
                    <li><a href="{{url}}" target="_blank" class="btn btn-link">{{text}}</a></li>
                  </ul>
                {{/each}}
              </div>
            </div>
          {{/with}}
        </div>
    </div>
  </footer>
</div>

