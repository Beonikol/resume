{{!
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}
<main>
    <hr>
    <section>
        <ol class="breadcrumb">
            {{#each breadcrumb}}
            <li class="breadcrumb-item"><a href="{{url}}">{{name}}</a></li>
            {{#if @last}}
            <li class="breadcrumb-item active" aria-current="page">{{name}} </li>
            {{/if}}
            {{/each}}
        </ol>
    </section>
    <section>
        <div class="mt-5">
            <h2>{{header}}</h2>
        </div>
        <div class="row mb-5">
            {{#each sortBlock}}
            <div class="col-3">
                <label class="form-label">{{label}}</label>
                <select class="form-select form-select-sm">
                    <option selected>{{placeholder}}</option>
                    {{#each options}}
                    <option value="{{value}}">{{text}}</option>
                    {{/each}}
                </select>
            </div>
            {{/each}}
        </div>
    </section>
    <section>
        {{#with filterBlock}}
        <div class="row">
            <div class="col-4">
                <div>
                    <div class="card">
                        <div class="card-body">
                            <div>
                                {{#with sellers}}
                                <div>
                                    <label class="form-label mb-3">{{title}}</label>
                                </div>
                                {{#each list}}
                                <div class="form-check">
                                    <label class="form-check-label">{{value}}</label>
                                    <input name="factors" type="checkbox" class="form-check-input">
                                </div>
                                {{/each}}
                                {{/with}}
                            </div>
                            <hr class="my-3">
                            <div>
                                {{#with brands}}
                                <div>
                                    <label class="form-label mb-3">{{title}}</label>
                                </div>
                                {{#with input}}
                                <div class="mb-3">
                                    <label class="form-label ps-1"></label>
                                    <input class="form-control" value="{{placeholder}}">
                                </div>
                                {{/with}}
                                {{#each options}}
                                <div class="form-check">
                                    <label class="form-check-label">{{value}}</label>
                                    <input name="factors" type="checkbox" class="form-check-input">
                                </div>
                                {{/each}}
                                {{/with}}
                            </div>
                            <hr class="my-3">
                            <div>
                                {{#with price}}
                                <div>
                                    <label class="form-label mb-1">{{title}}</label>
                                </div>
                                {{#with range}}
                                <div class="mb-3">
                                    <label class="form-label ps-1"></label>
                                    <input class="form-control mb-2" value="{{from}}">
                                    <input class="form-control" value="{{to}}">
                                </div>
                                {{/with}}
                                <div>
                                    {{#with button}}
                                    <a href="{{link}}" class="btn btn-outline-secondary px-4">{{text}}</a>
                                    {{/with}}
                                </div>
                                {{/with}}
                            </div>
                            <hr class="my-3">
                            <div>
                                {{#each filterList}}
                                <div>
                                    <label class="form-label mb-1">{{title}}</label>
                                </div>
                                <div>
                                    {{#each options}}
                                    <div class="form-check">
                                        <label class="form-check-label">{{value}}</label>
                                        <input name="factors" type="checkbox" class="form-check-input">
                                    </div>
                                    {{/each}}
                                </div>
                                <hr>
                                {{/each}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {{/with}}
            <div class="col-4">
                {{#each goodsList}}
                <div class="card mb-3">
                    <div class="card-body ">
                        <div>
                            <img class="card-img-top mb-3" src="{{img}}" alt="{{title}}">
                            {{#if isHot}}
                            <span class="badge text-bg-warning ms-1 rounded-pill">Hot</span>
                            {{/if}}
                            {{#if isNew}}
                            <span class="badge text-bg-primary ms-1 rounded-pill">New</span>
                            {{/if}}
                            {{#if isFast}}
                            <div><span class="badge text-bg-success ms-1 my-2">Швидка доставка</span></div>
                            {{/if}}
                            {{#if isFree}}
                            <span class="badge text-bg-secondary ms-1">Безкоштовна доставка</span>
                            {{/if}}
                        </div>
                        <div class="mt-3">
                            <b>{{name}}</b>
                        </div>
                        <div>
                            {{#with review}}
                            <div class="">
                                <span>{{amount}}</span> <span>{{text}}</span>
                            </div>
                            {{/with}}
                        </div>
                        <div class="mt-2">
                            <strong>{{price}}</strong>
                        </div>
                        <div class="mt-3">
                            <span>{{delivery}}</span>
                        </div>
                        <div class="my-2">
                            {{#each buttons}}
                            <a href="{{link}}"
                                class="{{#if isPrimary}}btn btn-primary{{/if}} {{#if isSecondary}}btn btn-secondary{{/if}} my-1">{{text}}</a>
                            {{/each}}
                        </div>
                        <div>
                            {{#each characteristics}}
                            <ul>
                                <li>{{title}}: {{value}}</li>
                            </ul>
                            {{/each}}
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
    </section>
    <section class="mt-3">
        {{#with service}}
        <div class="card">
            <div class="card-body text-center text-bg-success">
                <div>
                    <h5>{{title}}</h5>
                </div>
                <div>
                    <p>{{description}}</p>
                </div>
                <div>
                    {{#each buttons}}
                    <a href="{{link}}" class="btn btn-primary">{{text}}</a>
                    {{/each}}
                </div>
            </div>
        </div>
        {{/with}}
    </section>
    <hr class="mb-3">
</main>

