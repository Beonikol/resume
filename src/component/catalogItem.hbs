<div class="col-6">
    <div class="card mb-3">
        <div class="card-body ">
            <div>
                <img class="card-img-top mb-3" src="{{img}}" alt="{{title}}">
                {{#if isHot}}
                <span class="badge text-bg-warning ms-1 rounded-pill">Hot</span>
                {{/if}}
                {{#if isNew}}
                <span class="badge text-bg-primary ms-1 rounded-pill">New</span>
                {{/if}}
                {{#if isFast}}
                <div><span class="badge text-bg-success ms-1 my-2">Швидка доставка</span></div>
                {{/if}}
                {{#if isFree}}
                <span class="badge text-bg-secondary ms-1">Безкоштовна доставка</span>
                {{/if}}
            </div>
            <div class="mt-3">
                <b>{{name}}</b>
            </div>
            <div>
                {{#with review}}
                <div class="">
                    <span>{{amount}}</span> <span>{{text}}</span>
                </div>
                {{/with}}
            </div>
            <div class="mt-2">
                <strong>{{price}}</strong>
            </div>
            <div class="mt-3">
                <span>{{delivery}}</span>
            </div>
            <div class="my-2">
                {{#each buttons}}
                <a href="{{link}}"
                    class="{{#if isPrimary}}btn btn-primary{{/if}} {{#if isSecondary}}btn btn-secondary{{/if}} my-1">{{text}}</a>
                {{/each}}
            </div>
            <div>
                {{#each characteristics}}
                <ul>
                    <li>{{title}}: {{value}}</li>
                </ul>
                {{/each}}
            </div>
        </div>
    </div>
</div>